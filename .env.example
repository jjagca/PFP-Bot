# --- Twitter/X API (v1.1 + v2)
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_TOKEN_SECRET=
X_BEARER_TOKEN=

# --- Replicate
REPLICATE_API_TOKEN=

# Replicate model reference (can be your Gemini Flash workflow)
# Example default:
MODEL_REF=google/nano-banana

# Optional: fixed instruction for the model run
NANO_PROMPT=Add stylish sunglasses and apply a vibrant gradient background while preserving the personâ€™s face.

# Public asset URLs (PNG recommended). Use raw GitHub URLs or any public CDN.
SUNGLASSES_URL=
BACKGROUND_URL=

# Bot handle without the @ (e.g., mycoolbot)
BOT_HANDLE=

# Poll interval seconds
POLL_SECONDS=25

# Skip processing tweets the bot has already liked (default: enabled)
SKIP_IF_LIKED=1

# Number of recent liked tweets to preload on startup (default: 500)
LIKED_PRELOAD_LIMIT=500

# --- New Hardening & Authenticity-Preservation Features ---

# Liking strategy: all|probabilistic|none (default: all)
# - all: like every processed tweet (backward compatible)
# - probabilistic: like tweets based on LIKE_PROB
# - none: don't like any tweets
LIKE_MODE=all

# Probability of liking when LIKE_MODE=probabilistic (0.0-1.0, default: 0.7)
LIKE_PROB=0.7

# Enable human-like delay before each reply (1=enabled, 0=disabled, default: 1)
HUMANIZE_DELAY=1

# Reply delay range in seconds (default: 2-8)
REPLY_MIN_DELAY=2
REPLY_MAX_DELAY=8

# Maximum random jitter added to poll interval in seconds (default: 5)
POLL_JITTER_MAX=5

# Per-user daily reply cap (0=unlimited, default: 0)
PER_USER_MAX=0

# Global daily reply cap (0=unlimited, default: 0)
GLOBAL_MAX=0

# Add alt text to uploaded media for accessibility (1=enabled, 0=disabled, default: 1)
ALT_TEXT=1

# Enable subtle image variation to reduce perceptual hash clustering (1=enabled, 0=disabled, default: 0)
# Requires Pillow (optional dependency)
VARIANT_ENABLE=0

# Add session token to prompts to mitigate cache/dedup (1=enabled, 0=disabled, default: 1)
PROMPT_UNIQUIFIER=1

# Local processed state file path (default: .processed_ids)
PROCESSED_STATE_FILE=.processed_ids

# Maximum number of processed IDs to keep in state file (default: 10000)
PROCESSED_STATE_CAP=10000

# Ignore all pre-existing mentions at startup (1=enabled, 0=disabled, default: 0)
# When enabled, only process mentions created after the bot starts
IGNORE_HISTORY=0
